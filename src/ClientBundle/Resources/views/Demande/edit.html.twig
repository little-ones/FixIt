{% extends "baseadmin.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'Demande'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block content %}
<div style="margin: 200px ;margin-top: 10px;">
    <table border="0">
        <tr>
    <h1>{{ '%entity% edit'|trans({'%entity%': 'Demande'}, 'admin') }}</h1>

    {{ form_start(edit_form,{'attr':{'class ':'form-control'}}) }}

    <div class="form-group">
        <label>Client</label>
        {{ form_widget(edit_form.idClient ,{'attr':{'class ':'form-control select2 select2-hidden-accessible'}}) }}
    </div>
    <div class="form-group">
        <label>Titre</label>
        {{ form_widget(edit_form.titre ,{'attr':{'class ':'form-control'}}) }}
    </div>
    <div class="form-group">
        <label>Cat√©gorie</label>
        {{ form_widget(edit_form.categorie ,{'attr':{'class ':'form-control select2 select2-hidden-accessible'}}) }}
    </div>
    <div class="form-group">
        <label>Budget</label>
        {{ form_widget(edit_form.budget ,{'attr':{'class ':'form-control'}}) }}
    </div>
    <div class="form-group">
        <label>Description</label>
        {{ form_widget(edit_form.description ,{'attr':{'class ':'form-control'}}) }}
    </div>
    <p>
        <button class="btn btn-primary" type="submit"><i class="fa fa-edit"></i> {{ 'Edit'|trans({}, 'admin') }}
        </button>
    </p>
    {{ form_end(edit_form) }}
        </tr>
        <tr>
    {{ form_start(delete_form) }}
    {{ form_widget(delete_form) }}

    <div class="btn-group record_actions">

        <a class="btn btn-info" href="{{ path('DemandeClientAdmin') }}">
            <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
        </a>

        <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> {{ 'Delete'|trans({}, 'admin') }}
        </button>

    </div>

    <input name="modal" type="hidden" value="0">
    {{ form_end(delete_form) }}
        </tr>
    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'admin') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'admin') }}
                        , {{ 'this procedure is irreversible'|trans({}, 'admin') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'admin') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'admin') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'admin') }}</button>
                </div>
            </div>
        </div>
    </div>
    </table>
</div>
{% endblock %}
