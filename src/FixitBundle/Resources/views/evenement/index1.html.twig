{% extends 'base.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block content %}
    {{ parent() }}
    <h1>Evenements list</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>nom</th>
            <th>Prix en dinars</th>
            <th>Lieu</th>
            <th>Date</th>
            <th>Nbreparticipant</th>
            <th>formation</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td><a href="{{ path('evenement_show1', { 'id': evenement.id }) }}">{{ evenement.id }}</a></td>
                <td>{{ evenement.getnom }}</td>
                <td>{{ evenement.prix }}</td>
                <td>{{ evenement.lieu }}</td>
                <td>{% if evenement.date %}{{ evenement.date|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{{ evenement.nbreParticipant }}</td>
                <td>{{ evenement.formation }}</td>

                <td>

                    <ul>
                        <li>
                            <a href="{{ path('evenement_show1', { 'id': evenement.id }) }}">Montrer</a>
                        </li>
                        <li><a type="button" class="btn btn-primary" href="{{ path('participation_participate', {'id':evenement.id}) }}">participer</a></li>

                    </ul>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

